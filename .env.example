# MongoDB
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=lightrag_db

# LLM Provider
LLM_PROVIDER=groq                    # openai / groq
LLM_MODEL=llama-3.1-70b-versatile   # or gpt-4o-mini

# API Keys
OPENAI_API_KEY=sk-...
GROQ_API_KEY=gsk_...

# Performance Tuning
MAX_CONCURRENT_LLM_CALLS=16         # Parallel extraction
EXTRACTION_BATCH_SIZE=20            # Chunks per batch
EMBEDDING_BATCH_SIZE=128            # Embeddings per batch
MAX_GLEANING=1                      # Continue extraction attempts (0-2)
USE_LLM_ENTITY_MERGE=true           # Use LLM to merge entity descriptions
MIN_DESCRIPTIONS_FOR_LLM_MERGE=3    # Min descriptions to trigger LLM merge
