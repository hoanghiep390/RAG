# MongoDB
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=lightrag_db

# LLM Provider
LLM_PROVIDER=openai                  # openai / groq
LLM_MODEL=gpt-4o-mini                # llama-3.1-70b-versatile

# API Keys
OPENAI_API_KEY=sk-...
GROQ_API_KEY=gsk_...

# LLM Fallback
ENABLE_LLM_FALLBACK=true             # Auto-fallback to Groq if OpenAI fails

# Performance Tuning
MAX_CONCURRENT_LLM_CALLS=16       
EXTRACTION_BATCH_SIZE=20            
EMBEDDING_BATCH_SIZE=128            
MAX_GLEANING=1                      
USE_LLM_ENTITY_MERGE=true           
MIN_DESCRIPTIONS_FOR_LLM_MERGE=3    
